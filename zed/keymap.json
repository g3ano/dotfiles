[
  {
    "bindings": {
      "shift shift": "file_finder::Toggle",
      "ctrl-?": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-w q": "pane::CloseActiveItem"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "g F": "project_search::ToggleFilters",
      "g n": "search::SelectNextMatch",
      "g shift-n": "search::SelectPreviousMatch"
    }
  },
  {
    "context": "GitPanel && ChangesList",
    "use_key_equivalents": true,
    "bindings": {
      "o": "menu::Confirm"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "o": "project_panel::Open"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-p": null,
      "ctrl-n": null
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-;": "editor::ToggleInlineDiagnostics",
      "ctrl-m": null
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "ctrl-w": "editor::DeleteToPreviousWordStart"
    }
  },
  {
    "context": "Editor && mode == single_line",
    "bindings": {
      "ctrl-u": "editor::DeleteToBeginningOfLine",
      "ctrl-w": "editor::DeleteToPreviousWordStart"
    }
  },
  {
    "context": "ProjectSearchBar && !in_replace > Editor",
    "bindings": {
      "ctrl-p": "search::PreviousHistoryQuery",
      "ctrl-n": "search::NextHistoryQuery",
      "ctrl-m": "vim::SearchSubmit"
    }
  },
  {
    "context": "BufferSearchBar && !in_replace > Editor",
    "bindings": {
      "ctrl-p": "search::PreviousHistoryQuery",
      "ctrl-n": "search::NextHistoryQuery",
      "ctrl-m": "vim::SearchSubmit"
    }
  },
  {
    "context": "FileFinder || (FileFinder > Picker > Editor)",
    "bindings": {
      "ctrl-p": "file_finder::SelectPrevious"
    }
  }
]
